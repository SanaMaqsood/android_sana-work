<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:focusableInTouchMode="false"
        android:focusable="false">
        <EditText
            android:id="@+id/et_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:text=""
            android:layout_gravity="right"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp">

        <TableRow>

            <Button
                android:id="@+id/seven"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:text="9" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/four"
                android:onClick="onClick"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:onClick="onClick"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:onClick="onClick"
                android:text="6" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/one"
                android:onClick="onClick"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:onClick="onClick"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:onClick="onClick"
                android:text="3" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/plus"
                android:onClick="onClick"
                android:text="&#43;" />

            <Button
                android:id="@+id/zero"
                android:text="0" />

            <Button
                android:id="@+id/back"
                android:text="&#60;"

                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/times"
                android:onClick="onClick"
                android:text="&#42;" />

            <Button
                android:id="@+id/minus"
                android:onClick="onClick"
                android:text="&#45;" />

            <Button
                android:id="@+id/divide"
                android:onClick="onClick"
                android:text="&#47;" />
        </TableRow>
        <TableRow
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/equal"
                android:text="=" />
        </TableRow>
    </TableLayout>
</RelativeLayout>