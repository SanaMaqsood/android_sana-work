<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_avg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/margin_avg"
            android:text="Car"
            android:textSize="@dimen/text_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_min"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margin_min">

            <TextView
                android:id="@+id/textName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/margin_max"
                android:text="Name"
                android:textSize="@dimen/text_avg" />

            <Spinner
                android:id="@+id/sName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_max"
                android:scrollbarSize="@dimen/margin_max" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_min"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="@dimen/margin_min">

            <TextView
                android:id="@+id/textModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/margin_avg"
                android:text="Model"
                android:textSize="@dimen/text_avg" />

            <Spinner
                android:id="@+id/sModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/text_avg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_min"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="@dimen/margin_min"
            android:weightSum="2">

            <TextView
                android:id="@+id/textYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/margin_avg"
                android:text="Year"
                android:textSize="@dimen/text_avg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/calendar_image" />

                <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_avg"
                    android:layout_weight="30.50"
                    android:editable="false"
                    android:gravity="right"
                    android:hint="Enter Date"
                    android:padding="@dimen/margin_avg"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_min"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="@dimen/margin_min">

            <TextView
                android:id="@+id/textReg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/margin_max"
                android:text="Reg.No"
                android:textSize="@dimen/text_avg" />

            <EditText
                android:id="@+id/et_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:hint="Enter Registration No"
                android:inputType="number"
                android:padding="@dimen/margin_avg"
                android:textSize="@dimen/text_avg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_min"
            android:gravity="center"
            android:padding="@dimen/margin_min">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit" />

            <Button
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>